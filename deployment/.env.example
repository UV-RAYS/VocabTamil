# VocabTamil Production Environment Variables

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=vocabtamil.com,www.vocabtamil.com,localhost

# Database
DB_PASSWORD=your-secure-database-password

# Redis Cache
REDIS_URL=redis://redis:6379/0

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=vocabtamil-media
AWS_S3_REGION_NAME=us-east-1

# Google OAuth
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Frontend
NEXT_PUBLIC_API_URL=https://vocabtamil.com/api
NEXT_PUBLIC_APP_NAME=VocabTamil

# Optional: Superuser creation
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@vocabtamil.com
DJANGO_SUPERUSER_PASSWORD=secure-admin-password

# Optional: Sample data and testing
LOAD_SAMPLE_DATA=false
RUN_TESTS=false

# Email Settings (for production notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@vocabtamil.com
EMAIL_HOST_PASSWORD=your-email-password

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
